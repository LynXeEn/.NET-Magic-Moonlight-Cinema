@model IEnumerable<Magic_Moonlight_Cinema.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<div id="firstM" ; style="background: url(../../images/banner2.jpg); min-height: 1000px">
    <h2 style="color: white; font-weight: bold; padding-left: 670px; font-style: italic; padding-top: 10px ">Movies</h2>

    <div>
        <div style="display:inline-block; background-color: red; width: 150px; padding-left: 20px; border: 1px solid black; border-radius: 5px; margin-bottom: 10px">
            @if (User.IsInRole("Administrator"))
            {
                @Html.ActionLink("Add New Movie", "Create", null, new { style = "color:white;" })
            }
        </div>
    </div>

    <table id="moviesTable" class="table">
        <thead>
            <tr>
                <th style="color:darkgrey">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="color:darkgrey">
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th style="color:darkgrey">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th style="color:darkgrey">
                    @Html.DisplayNameFor(model => model.ReleaseDate)
                </th>
                <th style="color:darkgrey">
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th style="color:darkgrey">
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th style="color:darkgrey">
                    @Html.DisplayName("Cinema Name")
                </th>
                <th style="color:darkgrey">
                    @Html.DisplayName("Cinema Location")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <img src="@item.Image" style="width: 200px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CinemaBroadcast.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CinemaBroadcast.Location)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @style = "color:white; font-style: italic; font-weight: bold; padding-right: 10px" })
                        @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @style = "color:white; font-style: italic; font-weight: bold; padding-right: 10px" })

                        }
                        @if (User.IsInRole("Administrator"))
                        {
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @style = "color:red; font-style: italic; font-weight: bold" })

                        }
                        <!-- <button data-movie-id="@item.Id" class="btn-link js-delete">Delete</button> -->
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @section scripts{
        <script>
    const { Tab } = require("bootstrap");

            $(document).ready(function () {
                var table = $("#moviesTable").DataTable();
                $("#moviesTable .js-delete").on("click", function () {
                    var button = $(this);
                    bootbox.confirm("Do you want to delete this movie?", function (result) {
                        if (result) {
                            $.ajax({
                                url: "/Movies/Delete/" + button.attr("data-movie-id"),
                                method: "GET",
                                success: function () {
                                    table.row(button.parents("tr")).remove().draw();
                                }
                            });
                        }
                    });
                });
            });
        </script>
    }
