@model Magic_Moonlight_Cinema.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div id="registerche" style="height: 640px">
    <div class="container" style="background-color: red; margin-top: 100px">
        <h2 style="display: inline-block; margin-left: 470px; border: 2px solid white; border-radius: 5px; color: white; margin-top: 20px; width: 150px; padding-left: 30px; padding-top: 10px; margin-bottom: 15px">@ViewBag.Title</h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div style="width: 600px; margin-left: 250px; text-align: center">
                <h5 style="color: white; font-style: italic">Register on our cinema website to unlock an array of exciting features! Enjoy hassle-free ticket booking, exclusive promotions,
                and personalized recommendations. Stay updated on the latest releases and special screenings. Join our community of movie enthusiasts 
                and embark on a cinematic journey like never before.</h5>
            </div>
            <hr />
            @Html.ValidationSummary("", new { style = "color: darkred;"})
    <div class="form-group" style="margin-left: 130px">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", style = "color: white;" })

        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
            <div class="form-group" style="margin-left: 130px">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", style = "color: white;" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group" style="margin-left: 130px">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label", style = "color:white" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group" style="padding-bottom: 15px; padding-left: 450px">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" style="background: linear-gradient(to bottom, #8b0000, #ff0000); color: #fff; border: none; padding: 10px 20px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer; border-radius: 4px; ">Register</button>
                </div>
            </div>

            <div>

            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
