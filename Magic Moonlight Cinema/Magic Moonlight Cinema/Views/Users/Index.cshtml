@model IEnumerable<Magic_Moonlight_Cinema.Models.User>

@{
    ViewBag.Title = "Index";
}

<div id="firstU" ; style="background: url(../../images/banner2.jpg); min-height: 740px">
    <h2 style="color: white; font-weight: bold; padding-left: 670px; font-style: italic; padding-top: 10px ">Users</h2>

    <div>
        <div style="display:inline-block; background-color: red; width: 150px; padding-left: 20px; border: 1px solid black; border-radius: 5px; margin-bottom: 10px">
            @if (User.Identity.IsAuthenticated)
            { 
                @Html.ActionLink("Add New User", "Create", null, new { style = "color:white;" })
            }
        </div>
    </div>
    
    <table class="table">
        <tr>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.NewsletterSubscription)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="font-style: italic">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsletterSubscription)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @style = "color:white; font-style: italic; font-weight: bold; padding-right: 10px" })
                    
                    @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @style = "color:white; font-style: italic; font-weight: bold; padding-right: 10px" })

                    }

                    @if (User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @style = "color:darkred; font-style: italic; font-weight: bold; padding-right: 10px" })

                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Buy Ticket", "InsertNewTicket", new { id = item.Id }, new { @style = "color:red; font-style: italic; font-weight: bold" })

                    }
                </td>
            </tr>
        }

    </table>

</div>