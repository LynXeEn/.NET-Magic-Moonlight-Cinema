@model Magic_Moonlight_Cinema.Models.User

@{
    ViewBag.Title = "Details";
}

<div style="background: url(../../images/banner2.jpg); min-height: 740px; padding-top: 40px">
    <div class="container" style="padding-top: 50px; border: 1px solid red; border-radius: 10px">
        <h2 style="padding-left: 380px; color: white; font-weight: bold; font-style: italic">Details for user : @Model.UserName</h2>

        <div>
            
            <hr />
            <dl class="dl-horizontal">

                <dd>
                    <img src="~/images/official.png" style="width: 450px; margin-left: 330px;" />
                </dd>

                <dt style="margin-left: 300px; color: deepskyblue">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd style="margin-left: 350px; color: darkgrey">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt style="margin-left: 300px; color: deepskyblue">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>

                <dd style="margin-left: 350px; color: darkgrey">
                    @Html.DisplayFor(model => model.Age)
                </dd>

                <dt style="margin-left: 300px; color: deepskyblue">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>

                <dd style="margin-left: 350px; color: darkgrey">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>

                <dt style="margin-left: 300px; color: deepskyblue">
                    @Html.DisplayNameFor(model => model.NewsletterSubscription)
                </dt>

                <dd style="margin-left: 350px; color: darkgrey">
                    @Html.DisplayFor(model => model.NewsletterSubscription)
                </dd>

            </dl>
        </div>

        <h3 style="color: deepskyblue; margin-left:300px; text-decoration: underline; font-style: italic">Bought tickets: </h3>
        <div>
            <ul>

                @foreach (var ticket in Model.BookedTickets)
                {
                    <li>

                        <div style="display: inline-block; width: 250px; height:150px; border:2px solid blue; border-radius: 10px; padding-left: 40px; padding-top: 15px; margin-left: 350px; margin-right: 400px; margin-bottom: 20px">
                            <h6 style="color:white">Ticket code: <span style="font-weight: bold; font-style: italic">@ticket.TicketCode</span></h6>
                            <h6 style="color:white">Movie Name: <span style="font-weight: bold; font-style: italic">@ticket.Movie.Name</span></h6>
                            <h6 style="color:white">Movie Showtime: <span style="font-weight: bold; font-style: italic">@ticket.Showtime</span></h6>
                            <h6 style="color:white">Seat Number: <span style="font-weight: bold; font-style: italic">@ticket.SeatNumber</span></h6>
                        </div>

                    </li>
                }

            </ul>
        </div>

        <p style="padding-bottom: 10px; padding-left: 10px">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @style = "color: lightblue; font-style: italic"}) |
            @Html.ActionLink("Back to List", "Index", null, new { @style = "color: darkred; font-style: italic" })
        </p>

    </div>
</div>