@model IEnumerable<Magic_Moonlight_Cinema.Models.Ticket>

@{
    ViewBag.Title = "Index";
}

<div id="firstT" ; style="background: url(../../images/banner2.jpg); min-height: 740px">
    <h2 style="color: white; font-weight: bold; padding-left: 670px; font-style: italic; padding-top: 10px ">Tickets</h2>

    <div>
        <div style="display:inline-block; background-color: red; width: 150px; padding-left: 20px; border: 1px solid black; border-radius: 5px; margin-bottom: 10px">
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Reserve Ticket", "Create", null, new { style = "color:white;" })
            }

        </div>
    </div>
    <p>
        
    </p>
    <table class="table">
        <tr>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.TicketCode)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.SeatNumber)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.Showtime)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayNameFor(model => model.film)
            </th>
            <th style="color:darkgrey">
                @Html.DisplayName("Bought by user")
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="font-style: italic">
                    @Html.DisplayFor(modelItem => item.TicketCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeatNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Showtime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>

                <td>
                    @Html.ActionLink("Check-Ticket", "Details", new { id = item.Id }, new { @style = "color:white; font-style: italic; font-weight: bold; padding-right: 10px" })

                    @if (User.IsInRole("Administrator") || User.IsInRole("Editor"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @style = "color:white; font-style: italic; font-weight: bold; padding-right: 10px" })

                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @style = "color:red; font-style: italic; font-weight: bold" })

                    }
                </td>
            </tr>
        }

    </table>

</div>